<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/iv_default_navigation_bar_left_icon"
            android:layout_width="10dp"
            android:layout_height="17.5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_default_navigation_bar_left_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_default_navigation_bar_center_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="18sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_default_navigation_bar_right_icon"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_default_navigation_bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone"/>

    <View
        android:id="@+id/dividing_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#E3E3E3"
        android:visibility="gone"/>
</RelativeLayout>
